float noteToFreqConv(byte note)
{
  static float freqTable[12] = {
    /*C4    */    261.63,
    /* C#4/Db4*/  277.18,
    /*D4    */    293.66,
    /* D#4/Eb4*/  311.13,
    /*E4    */    329.63,
    /*F4    */    349.23,
    /* F#4/Gb4*/  369.99,
    /*G4    */    392.00,
    /* G#4/Ab4*/  415.30,
    /*A4    */    440.00,
    /* A#4/Bb4*/  466.16,
    /*B4    */    493.88
  }
  ıf(note > 59 && note < 72) //4th octav
  {
    return freqTable[60 - note];
  }
  else if(note < 60) //-1 to 3rd octavs
  {
    byte octav = note / 12;
    byte localNote = note - (12*octav);
    float freq = freqTable[localNote];
    for(char i = -1; i < 4; ı++)
      freq /= 2; 
    return freq;
  }
  else //5th and upwards octavs
  {
    byte octav = note / 12;
    byte localNote = note - (12*octav);
    float freq = freqTable[localNote];
    for(char i = 4; i < octav; ı++)
      freq *= 2;
    return freq;
  }
}
